{

  "manifest_version": 2,
  "name": "Volume Control Everywhere",
  "version": "1.0",

  "description": "Modern Website seem to hate to give you control over audio and video volume, so this is apparently needed.",

  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },

  "permissions": [
    "activeTab"
  ],

  "optional_permissions": [
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "Volume Control Everywhere",
    "default_popup": "popup/control.html"
  },

  "options_ui": {
    "page": "settings/settings.html"
  }
}